---
// pages/index.astro
import Layout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import BlogCard from "../components/BlogCard.astro";
import { SITE_DESCRIPTION } from "../consts";

const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);

const structuredData = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "arttu.net",
  url: "https://arttu.net",
  author: {
    "@type": "Person",
    name: "Arttu Nikkilä",
    url: "https://arttu.net",
    sameAs: [
      "https://github.com/succabs",
      "https://linkedin.com/in/arttu-nikkila",
      "https://arttu.net",
    ],
  },
  description: SITE_DESCRIPTION,
};
---

<style>
  @import url("https://fonts.googleapis.com/css2?family=Caveat&display=swap");

  .signature {
    font-family: "Caveat", cursive;
    font-size: 2rem;
    color: var(--color-text);
    margin-top: 2rem;
    margin-bottom: 0;
    text-align: left;
    white-space: nowrap;
  }
  .intro {
    display: flex;
    align-items: flex-start;
    gap: 64px;
    margin-top: 2rem;
    flex-wrap: wrap;
  }

  .intro-text {
    flex: 1 1 300px;
  }

  .intro-image {
    flex: 1 1 300px;
    max-width: 400px;
  }

  .intro-image img {
    width: 100%;
    height: auto;
    border-radius: 0px;
  }

  @media (max-width: 720px) {
    .intro {
      flex-direction: column;
      align-items: center;
      text-align: left;
    }

    .intro-image {
      max-width: 300px;
    }

    .intro-text {
      text-align: left;
    }
  }

  .latest-posts {
    margin-top: 4rem;
  }

  .post-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
  }

  .see-more {
    margin-top: 2rem;
    text-align: center;
  }

  .see-more a {
    font-family: var(--font-heading);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent);
    text-decoration: none;
    border: 2px solid var(--accent);
    padding: 0.5em 1em;
    display: inline-block;
  }

  .see-more a:hover {
    background: var(--accent);
    color: var(--color-bg);
  }
</style>
<Layout
  title="Home"
  pageClass="page-red"
  description="Developer portfolio of Arttu Nikkilä — projects, skills, and experiments in web development and a cool blog."
>
  <h1>Hello,</h1>
  <section class="intro">
    <div class="intro-text">
      <p>
        I'm Arttu. In my current role as a developer I adapt to a wide range of
        situations deeply in the <em>client interface</em>, balancing technical
        expertise with customer-facing responsibilities in the field of
        eCommerce.
      </p>

      <p>
        I'm based in Jyväskylä, Finland. I do a lot of cool stuff in addition to
        my work. You can find a lot of information about them from this site,
        everything from reading to DJ'ing.
      </p>

      <p>
        This website is a place where I share things that don’t always fit
        inside a case study or résumé: experiments, side projects, and thoughts
        on the world that revolves around me.
      </p>

      <p>
        Feel free to check out my <a href="/projects">projects</a>, read about
        my <a href="/experience">experience</a>, or explore the <a href="/blog"
          >blog</a
        >.
      </p>
      <p class="signature">– Arttu :)</p>
    </div>

    <div class="intro-image">
      <img src="/me.jpg" alt="Arttu Nikkilä portrait" />
    </div>
  </section>

  <section class="latest-posts">
    <h2>Latest Posts</h2>
    <div class="post-grid">
      {
        posts.map((post) => (
          <BlogCard
            title={post.data.title}
            date={post.data.pubDate}
            excerpt={post.data.excerpt}
            href={`/blog/${post.id}/`}
            heroImage={post.data.heroImage}
            heroImageAlt={post.data.heroImageAlt}
          />
        ))
      }
    </div>
    <div class="see-more">
      <a href="/blog">See more posts →</a>
    </div>
  </section>
</Layout>
<script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
