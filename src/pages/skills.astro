---
import Layout from "../layouts/BaseLayout.astro";
import CertificationItem from "../components/CertificationItem.astro";

const certifications = [
  {
    title: "Channable Feed Management",
    issuer: "Channable",
    date: "August 22, 2024",
    link: "https://www.credential.net/2a263c35-11c0-442b-b97f-ccb696729331#gs.e5zz7z",
  },
  {
    title: "Google Analytics Certification",
    issuer: "Skillshop",
    date: "August 23, 2024",
    link: "https://skillshop.credential.net/e2cfdcba-1898-4ffb-918d-baea0ccc8916",
  },
];
---

<Layout
  title="Skills"
  description="Technologies and tools I'm confident using in projects, plus certifications I've earned along the way."
  pageClass="page-blue"
>
  <h1>Skills</h1>

  <p>Technologies I'm comfortable with and certificates I've earned.</p>

  <hr />

  <section>
    <h2>Languages</h2>
    <ul class="skill-grid">
      <li><span class="dot blue"></span> HTML5</li>
      <li><span class="dot blue"></span> CSS3</li>
      <li><span class="dot blue"></span> JavaScript</li>
      <li><span class="dot blue"></span> TypeScript</li>
      <li><span class="dot blue"></span> Liquid</li>
      <li><span class="dot blue"></span> Python</li>
      <li><span class="dot blue"></span> Java</li>
    </ul>
  </section>

  <section>
    <h2>Frameworks & Libraries</h2>
    <ul class="skill-grid">
      <li><span class="dot red"></span> React</li>
      <li><span class="dot red"></span> Astro</li>
      <li><span class="dot red"></span> jQuery</li>
      <li><span class="dot red"></span> TailwindCSS</li>
      <li><span class="dot red"></span> Bootstrap</li>
      <li><span class="dot red"></span> Flask</li>
    </ul>
  </section>

  <section>
    <h2>Tools & Other</h2>
    <ul class="skill-grid">
      <li><span class="dot yellow"></span> Git</li>
      <li><span class="dot yellow"></span> VSCode</li>
      <li><span class="dot yellow"></span> Docker</li>
      <li><span class="dot yellow"></span> Google Analytics / GTM</li>
      <li><span class="dot yellow"></span>Various CMP's</li>
      <li><span class="dot yellow"></span> Linux</li>
      <li><span class="dot yellow"></span> PostgreSQL</li>
      <li><span class="dot yellow"></span> Node.js</li>
      <li><span class="dot yellow"></span> Nginx</li>
      <li><span class="dot yellow"></span> Vite</li>
      <li><span class="dot yellow"></span> Figma</li>
      <li><span class="dot yellow"></span> Jira</li>
      <li><span class="dot yellow"></span> Teamwork</li>
      <li><span class="dot yellow"></span> Microsoft Teams</li>
    </ul>
  </section>

  <section class="mt-16">
    <h2 class="">Certifications</h2>

    <div class="certifications-grid">
      {
        certifications.map((cert) => (
          <CertificationItem
            title={cert.title}
            issuer={cert.issuer}
            date={cert.date}
            link={cert.link}
          />
        ))
      }
    </div>
  </section>

  <style>
    .skill-grid {
      list-style: none;
      padding: 0;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 1rem 2rem;
      margin-top: 1em;
      font-family: var(--font-heading);
      font-size: 1rem;
    }
    .dot {
      display: inline-block;
      width: 0.75em;
      height: 0.75em;
      border-radius: 50%;
      margin-right: 0.5em;
      vertical-align: middle;
    }

    .blue {
      background: var(--accent-blue);
    }

    .red {
      background: var(--accent-red);
    }

    .yellow {
      background: var(--accent-yellow);
    }

    section h2 {
      margin-bottom: 2rem; /* tilaa otsikon ja listan väliin */
    }

    section + section {
      margin-top: 3rem; /* väli lohkojen väliin */
    }

    .certifications-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin-top: 1.5rem;
    }

    .certification-card {
      border: 2px solid var(--color-text);
      padding: 1.5rem;
      border-radius: 8px;
      transition: transform 0.2s ease;
      background-color: var(--color-bg);
    }

    .certification-card:hover {
      transform: scale(1.02);
    }

    .certification-title {
      font-family: var(--font-heading);
      font-size: 1.25rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
      color: var(--color-text);
    }

    .certification-meta {
      font-size: 0.9rem;
      color: var(--color-text);
      margin-bottom: 0.5rem;
    }

    .certification-link {
      display: inline-block;
      margin-top: 0.75rem;
      font-weight: bold;
      color: var(--accent-blue);
      text-decoration: none;
      border-bottom: 2px solid var(--accent-blue);
    }

    .certification-link:hover {
      color: var(--color-text);
      border-color: var(--color-text);
    }
  </style>
</Layout>
