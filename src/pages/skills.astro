---
import Layout from "../layouts/BaseLayout.astro";
import CertificationItem from "../components/CertificationItem.astro";

const certifications = [
  {
    title: "Channable Feed Management",
    issuer: "Channable",
    date: "August 22, 2024",
    link: "https://www.credential.net/2a263c35-11c0-442b-b97f-ccb696729331#gs.e5zz7z",
  },
  {
    title: "Google Analytics Certification",
    issuer: "Skillshop",
    date: "August 23, 2024",
    link: "https://skillshop.credential.net/e2cfdcba-1898-4ffb-918d-baea0ccc8916",
  },
];
---

<Layout
  title="Skills"
  description="Technologies and tools I'm confident using in projects, plus certifications I've earned along the way."
  pageClass="page-blue"
>
  <h1>Skills</h1>

  <p>
    Technologies I'm comfortable with, soft skills I bring to teams, and
    certificates I've earned.
  </p>

  <hr />

  <section>
    <h2>Soft Skills</h2>

    <p>
      <strong>Curious</strong> — I like understanding how things work and why they
      fail. I tend to dive deep when something doesn’t make sense and enjoy figuring
      out better ways to do things.
    </p>

    <p>
      <strong>Adaptable</strong> — I work well in ambiguity and don’t need everything
      specified to start. I enjoy learning new tools and switching contexts when
      needed — whether that’s picking up a totally new tool or learning to configure
      app settings.
    </p>

    <p>
      <strong>Collaborative</strong> — I value open discussion, quick feedback, and
      working with people who take ownership. I’m also happy to explain things, ask
      questions, and pair when needed.
    </p>
  </section>

  <section>
    <h2>Languages</h2>
    <div class="tag-list">
      <span class="tag blue">HTML5</span>
      <span class="tag blue">CSS3</span>
      <span class="tag blue">JavaScript</span>
      <span class="tag blue">TypeScript</span>
      <span class="tag blue">Liquid</span>
      <span class="tag blue">Python</span>
      <span class="tag blue">Java</span>
    </div>
  </section>

  <section>
    <h2>Frameworks & Libraries</h2>
    <div class="tag-list">
      <span class="tag red">React</span>
      <span class="tag red">Astro</span>
      <span class="tag red">jQuery</span>
      <span class="tag red">TailwindCSS</span>
      <span class="tag red">Bootstrap</span>
      <span class="tag red">Flask</span>
    </div>
  </section>

  <section>
    <h2>Tools & Other</h2>
    <div class="tag-list">
      <span class="tag blue">Git</span>
      <span class="tag blue">VSCode</span>
      <span class="tag blue">Docker</span>
      <span class="tag blue">Google Analytics / GTM</span>
      <span class="tag blue">Various CMP's</span>
      <span class="tag blue">Linux</span>
      <span class="tag blue">PostgreSQL</span>
      <span class="tag blue">Node.js</span>
      <span class="tag blue">Nginx</span>
      <span class="tag blue">Vite</span>
      <span class="tag blue">Figma</span>
      <span class="tag blue">Jira</span>
      <span class="tag blue">Teamwork</span>
      <span class="tag blue">Microsoft Teams</span>
    </div>
  </section>

  <section class="mt-16">
    <h2 class="">Certifications</h2>

    <div class="certifications-grid">
      {
        certifications.map((cert) => (
          <CertificationItem
            title={cert.title}
            issuer={cert.issuer}
            date={cert.date}
            link={cert.link}
          />
        ))
      }
    </div>
  </section>

  <style>
    .tag-list {
      margin-top: 1rem;
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      font-family: var(--font-heading);
      font-size: 1rem;
    }

    .blue {
      background: var(--accent-blue);
    }

    .red {
      background: var(--accent-red);
    }

    blue {
      background: var(--accent blue);
    }

    section h2 {
      margin-bottom: 2rem; /* tilaa otsikon ja listan väliin */
    }

    section + section {
      margin-top: 3rem; /* väli lohkojen väliin */
    }

    .certifications-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin-top: 1.5rem;
    }

    .certification-card {
      border: 2px solid var(--color-text);
      padding: 1.5rem;
      border-radius: 8px;
      transition: transform 0.2s ease;
      background-color: var(--color-bg);
    }

    .certification-card:hover {
      transform: scale(1.02);
    }

    .certification-title {
      font-family: var(--font-heading);
      font-size: 1.25rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
      color: var(--color-text);
    }

    .certification-meta {
      font-size: 0.9rem;
      color: var(--color-text);
      margin-bottom: 0.5rem;
    }

    .certification-link {
      display: inline-block;
      margin-top: 0.75rem;
      font-weight: bold;
      color: var(--accent-blue);
      text-decoration: none;
      border-bottom: 2px solid var(--accent-blue);
    }

    .certification-link:hover {
      color: var(--color-text);
      border-color: var(--color-text);
    }
  </style>
</Layout>
