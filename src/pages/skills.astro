---
import Layout from "../layouts/BaseLayout.astro";
import CertificationItem from "../components/CertificationItem.astro";

const certifications = [
  {
    title: "Channable Feed Management",
    issuer: "Channable",
    date: "August 22, 2024",
    link: "https://www.credential.net/2a263c35-11c0-442b-b97f-ccb696729331#gs.e5zz7z",
  },
  {
    title: "Google Analytics Certification",
    issuer: "Skillshop",
    date: "August 23, 2024",
    link: "https://skillshop.credential.net/e2cfdcba-1898-4ffb-918d-baea0ccc8916",
  },
];
---

<Layout
  title="Skills"
  description="Technologies and tools I'm confident using in projects, plus certifications I've earned along the way."
  pageClass="page-blue"
>
  <h1>Skills</h1>

  <p>Technologies I'm comfortable with and certificates I've earned.</p>

  <hr />

  <section>
    <h2>Languages</h2>
    <div class="tag-list">
      <span class="tag blue">HTML5</span>
      <span class="tag blue">CSS3</span>
      <span class="tag blue">JavaScript</span>
      <span class="tag blue">TypeScript</span>
      <span class="tag blue">Liquid</span>
      <span class="tag blue">Python</span>
      <span class="tag blue">Java</span>
    </div>
  </section>

  <section>
    <h2>Frameworks & Libraries</h2>
    <div class="tag-list">
      <span class="tag red">React</span>
      <span class="tag red">Astro</span>
      <span class="tag red">jQuery</span>
      <span class="tag red">TailwindCSS</span>
      <span class="tag red">Bootstrap</span>
      <span class="tag red">Flask</span>
    </div>
  </section>

  <section>
    <h2>Tools & Other</h2>
    <div class="tag-list">
      <span class="tag yellow">Git</span>
      <span class="tag yellow">VSCode</span>
      <span class="tag yellow">Docker</span>
      <span class="tag yellow">Google Analytics / GTM</span>
      <span class="tag yellow">Various CMP's</span>
      <span class="tag yellow">Linux</span>
      <span class="tag yellow">PostgreSQL</span>
      <span class="tag yellow">Node.js</span>
      <span class="tag yellow">Nginx</span>
      <span class="tag yellow">Vite</span>
      <span class="tag yellow">Figma</span>
      <span class="tag yellow">Jira</span>
      <span class="tag yellow">Teamwork</span>
      <span class="tag yellow">Microsoft Teams</span>
    </div>
  </section>

  <section class="mt-16">
    <h2 class="">Certifications</h2>

    <div class="certifications-grid">
      {
        certifications.map((cert) => (
          <CertificationItem
            title={cert.title}
            issuer={cert.issuer}
            date={cert.date}
            link={cert.link}
          />
        ))
      }
    </div>
  </section>

  <style>
    .tag-list {
      margin-top: 1rem;
      display: flex;
      flex-wrap: wrap;
      gap: 0.5rem;
      font-family: var(--font-heading);
      font-size: 1rem;
    }

    .blue {
      background: var(--accent-blue);
    }

    .red {
      background: var(--accent-red);
    }

    .yellow {
      background: var(--accent-yellow);
    }

    section h2 {
      margin-bottom: 2rem; /* tilaa otsikon ja listan väliin */
    }

    section + section {
      margin-top: 3rem; /* väli lohkojen väliin */
    }

    .certifications-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 2rem;
      margin-top: 1.5rem;
    }

    .certification-card {
      border: 2px solid var(--color-text);
      padding: 1.5rem;
      border-radius: 8px;
      transition: transform 0.2s ease;
      background-color: var(--color-bg);
    }

    .certification-card:hover {
      transform: scale(1.02);
    }

    .certification-title {
      font-family: var(--font-heading);
      font-size: 1.25rem;
      font-weight: bold;
      margin-bottom: 0.5rem;
      color: var(--color-text);
    }

    .certification-meta {
      font-size: 0.9rem;
      color: var(--color-text);
      margin-bottom: 0.5rem;
    }

    .certification-link {
      display: inline-block;
      margin-top: 0.75rem;
      font-weight: bold;
      color: var(--accent-blue);
      text-decoration: none;
      border-bottom: 2px solid var(--accent-blue);
    }

    .certification-link:hover {
      color: var(--color-text);
      border-color: var(--color-text);
    }
  </style>
</Layout>
