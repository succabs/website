---
// CertificationItem.astro
export interface Props {
  title: string;
  issuer: string;
  date: string;
  link?: string;
}

const { title, issuer, date, link } = Astro.props;
---

<div class="bauhaus-card">
  <div class="header-bar"></div>
  <div class="content">
    <h3 class="title">{title}</h3>
    <p class="issuer">Issued by <strong>{issuer}</strong></p>
    <p class="date">Date: {date}</p>

    {
      link ? (
        <a href={link} class="button" target="_blank" rel="noopener noreferrer">
          View Certificate <span class="arrow" aria-hidden="true">↗</span>
          <span class="sr-only">(opens in a new tab)</span>
        </a>
      ) : (
        <p class="no-link">No link available</p>
      )
    }
  </div>
  <div class="footer-bar"></div>
</div>

<style>
  .bauhaus-card {
    border: 4px solid black;
    background-color: #faf8f4;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 100%;
    margin-bottom: 2rem;
    padding-block: 0.5rem; /* lisää vähän tilaa top/bottom */
  }

  .content {
    padding: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .title {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 700;
    text-transform: uppercase;
    color: #1a1a1a;
    margin: 0 0 0.25rem 0;
  }

  .issuer,
  .date {
    font-size: 0.95rem;
    font-family: var(--font-body);
    color: #1a1a1a;
  }

  .button {
    margin-top: 1rem;
    background-color: transparent;
    color: var(--accent);
    padding: 0.5rem 1rem;
    text-decoration: none;
    font-weight: 600;
    text-transform: uppercase;
    font-size: 0.875rem;
    border: 2px solid var(--accent);
    display: inline-block;
    border-radius: 0;
    transition: all 0.2s ease;
  }

  .button:hover {
    background-color: var(--accent);
    color: var(--color-bg); /* taustaväri tekstin väriksi */
    border-color: var(--accent);
  }

  .no-link {
    font-style: italic;
    color: #999;
    font-size: 0.9rem;
  }
  .button .arrow {
    display: inline-block;
    transition: transform 0.2s ease;
    margin-left: 0.25em;
  }

  .button:hover .arrow {
    transform: translateX(4px);
  }
</style>
