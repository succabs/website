---
import HeaderLink from "./HeaderLink.astro";
---

<header class="site-header">
  <nav class="nav-bar">
    <div class="menu-and-title">
      <button class="hamburger" id="hamburger-btn" aria-label="Menu toggle">
        <svg
          id="hamburger-icon"
          width="40"
          height="40"
          viewBox="0 0 100 100"
          fill="#faf8f4"
          xmlns="http://www.w3.org/2000/svg"
        >
          <rect class="bar bun-top" x="15" y="20" width="70" height="10" rx="2"
          ></rect>
          <rect
            class="bar filling-red"
            x="10"
            y="32"
            width="80"
            height="10"
            rx="2"></rect>
          <rect
            class="bar filling-yellow"
            x="10"
            y="44"
            width="80"
            height="10"
            rx="2"></rect>
          <rect
            class="bar filling-blue"
            x="10"
            y="56"
            width="80"
            height="10"
            rx="2"></rect>
          <rect
            class="bar bun-bottom"
            x="15"
            y="68"
            width="70"
            height="10"
            rx="2"></rect>
        </svg>
      </button>

      <a href="/" class="site-title">arttu.net</a>
    </div>
    <div id="nav-links" class="nav-links mobile-hidden">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/experience/">Experience</HeaderLink>
      <HeaderLink href="/projects/">Projects</HeaderLink>
      <HeaderLink href="/skills/">Skills</HeaderLink>
      <HeaderLink href="/about/">About</HeaderLink>
      <HeaderLink href="/questbook/">Questbook</HeaderLink>
      <HeaderLink href="/blog/">Blog</HeaderLink>
    </div>
  </nav>
</header>

<style>
  .site-header {
    padding: 32px 64px 32px 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    max-width: var(--max-width);
    margin: 0 auto;
    margin-bottom: 64px;
    border-bottom: 6px solid var(--corner-color);
  }

  .site-title {
    font-family: var(--font-heading);
    font-size: 32px;
    font-weight: 700;
    text-transform: uppercase;
    color: var(--color-text);
    text-decoration: none;
    padding-right: 2rem;
  }

  .nav-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
  }

  .nav-links {
    display: flex;
    gap: 32px;
    flex-wrap: wrap;
  }

  .nav-links a {
    font-family: var(--font-heading);
    font-size: 18px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text);
    text-decoration: none;
    position: relative;
  }

  .nav-links a.active {
    color: var(--accent);
    border-bottom: 3px solid var(--accent);
  }

  .nav-links a::after {
    content: "";
    display: block;
    width: 100%;
    height: 2px;
    background: var(--accent);
    transform: scaleX(0);
    transition: transform 0.2s ease-in-out;
    transform-origin: left;
    position: absolute;
    bottom: -4px;
    left: 0;
  }

  .nav-links a:hover::after,
  .nav-links a.active::after {
    transform: scaleX(1);
  }

  .hamburger {
    display: none;
  }

  .menu-and-title {
    display: flex;
    align-items: center;
  }

  @media (max-width: 720px) {
    .site-header {
      padding: 32px 16px 32px;
    }

    .menu-and-title {
      display: flex;
      flex-direction: row;
      margin-bottom: 0px;
    }
    .hamburger {
      display: flex;
      justify-content: center;
      align-items: center;
      width: 56px;
      height: 56px;
      background: none;
      border: 2px solid var(--color-text);
      border-radius: 0;
      padding: 0;
      box-shadow: none;
      cursor: pointer;
      margin-right: 1rem;
    }

    .hamburger svg {
      display: block;
    }

    .hamburger svg {
      transition: transform 0.3s ease;
    }

    .hamburger .bar {
      transition: transform 0.3s ease;
    }

    .hamburger .bun-top,
    .hamburger .bun-bottom {
      fill: var(--accent-brown);
    }

    .hamburger .filling-red {
      fill: var(--accent-red);
    }

    .hamburger .filling-yellow {
      fill: var(--accent-yellow);
    }

    .hamburger .filling-blue {
      fill: var(--accent-blue);
    }

    .hamburger.active .bun-top {
      transform: translateY(-12px);
    }

    .hamburger.active .filling-red {
      transform: translateY(-6px);
    }

    .hamburger.active .filling-yellow {
      transform: translateY(0);
    }

    .hamburger.active .filling-blue {
      transform: translateY(6px);
    }

    .hamburger.active .bun-bottom {
      transform: translateY(12px);
    }

    .nav-links {
      flex-direction: column;
      margin-top: 1em;
      gap: 1rem;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
    }

    .nav-links.mobile-hidden {
      display: none;
      max-height: 0;
    }

    .nav-links.mobile-show {
      max-height: 500px;
    }
  }
</style>

<!-- Run the script on the client -->
<script>
  import { setupHamburgerMenu } from "../scripts/hamburger.ts";
  setupHamburgerMenu();
</script>
