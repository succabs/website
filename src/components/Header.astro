---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header class="site-header">
  <nav>
    <div class="menu-and-title">
      <button class="hamburger" id="hamburger-btn" aria-label="Menu toggle">
        <svg
          id="hamburger-icon"
          width="40"
          height="40"
          viewBox="0 0 100 100"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <rect class="bar bun-top" x="15" y="15" width="70" height="10" rx="2"
          ></rect>
          <rect
            class="bar filling-red"
            x="15"
            y="27"
            width="70"
            height="10"
            rx="2"></rect>
          <rect
            class="bar filling-yellow"
            x="15"
            y="39"
            width="70"
            height="10"
            rx="2"></rect>
          <rect
            class="bar filling-blue"
            x="15"
            y="51"
            width="70"
            height="10"
            rx="2"></rect>
          <rect
            class="bar bun-bottom"
            x="15"
            y="63"
            width="70"
            height="10"
            rx="2"></rect>
        </svg>
      </button>

      <a href="/" class="site-title">{SITE_TITLE}</a>
    </div>
    <div id="nav-links" class="nav-links mobile-hidden">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/experience">Experience</HeaderLink>
      <HeaderLink href="/projects">Projects</HeaderLink>
      <HeaderLink href="/skills">Skills</HeaderLink>
      <HeaderLink href="/questbook">Questbook</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
    </div>
  </nav>
</header>

<style>
  .site-header {
    padding: 64px 64px 32px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    max-width: var(--max-width);
    margin: 0 auto;
    border-bottom: 1px solid var(--corner-color);
  }

  .site-title {
    font-family: var(--font-heading);
    font-size: 32px;
    font-weight: 700;
    text-transform: uppercase;
    color: var(--color-text);
    text-decoration: none;
  }

  .nav-links {
    display: flex;
    gap: 32px;
    flex-wrap: wrap;
  }

  .nav-links a {
    font-family: var(--font-heading);
    font-size: 18px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-text);
    text-decoration: none;
    position: relative;
  }

  .nav-links a.active {
    color: var(--accent);
    border-bottom: 3px solid var(--accent);
  }

  .nav-links a::after {
    content: "";
    display: block;
    width: 100%;
    height: 2px;
    background: var(--accent);
    transform: scaleX(0);
    transition: transform 0.2s ease-in-out;
    transform-origin: left;
    position: absolute;
    bottom: -4px;
    left: 0;
  }

  .nav-links a:hover::after,
  .nav-links a.active::after {
    transform: scaleX(1);
  }

  .hamburger {
    display: none;
  }

  @media (max-width: 720px) {
    .site-header {
      padding: 32px 16px 32px;
    }

    .menu-and-title {
      display: flex;
      flex-direction: row;
    }
    .hamburger {
      display: block;
      margin-right: 16px;
    }

    .hamburger svg {
      transition: transform 0.3s ease;
    }

    .hamburger .bar {
      transition: transform 0.3s ease;
    }

    .hamburger .bun-top,
    .hamburger .bun-bottom {
      fill: var(--accent-brown);
    }

    .hamburger .filling-red {
      fill: var(--accent-red);
    }

    .hamburger .filling-yellow {
      fill: var(--accent-yellow);
    }

    .hamburger .filling-blue {
      fill: var(--accent-blue);
    }

    .hamburger.active .bun-top {
      transform: translateY(-6px);
    }

    .hamburger.active .filling-red {
      transform: translateY(-3px);
    }

    .hamburger.active .filling-yellow {
      transform: translateY(0);
    }

    .hamburger.active .filling-blue {
      transform: translateY(3px);
    }

    .hamburger.active .bun-bottom {
      transform: translateY(6px);
    }

    .nav-links {
      flex-direction: column;
      margin-top: 1em;
      gap: 1rem;
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease;
    }

    .nav-links.mobile-hidden {
      display: none;
      max-height: 0;
    }

    .nav-links.mobile-show {
      max-height: 500px;
    }
  }
</style>

<!-- Run the script on the client -->
<script>
  import { setupHamburgerMenu } from "../scripts/hamburger.ts";
  setupHamburgerMenu();
</script>
