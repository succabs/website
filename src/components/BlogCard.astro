---
import FormattedDate from "./FormattedDate.astro";
import { Image } from "astro:assets";

export interface Props {
  title: string;
  date: Date;
  href: string;
  excerpt?: string;
  heroImage?: ImageMetadata;
  heroImageAlt?: string;
}

const { title, date, href, excerpt, heroImage, heroImageAlt } = Astro.props as Props;
---
<article class="blog-card">
  {heroImage && (
    <a href={href} class="image">
      <Image src={heroImage} alt={heroImageAlt ?? title} width={420} height={236} />
    </a>
  )}
  <div class="content">
    <h3 class="title"><a href={href}>{title}</a></h3>
    {excerpt && <p class="excerpt">{excerpt}</p>}
    <p class="date"><FormattedDate date={date} /></p>
  </div>
</article>

<style>
  .blog-card {
    border: 2px solid var(--accent);
    padding: 1rem;
    display: flex;
    flex-direction: column;
    height: 100%;
  }
  .image img {
    display: block;
    width: 100%;
    height: auto;
    aspect-ratio: 16 / 9;
    object-fit: cover;
    margin-bottom: 1rem;
  }
  .title {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    margin: 0 0 0.5rem;
  }
  .title a {
    color: var(--color-text);
    text-decoration: none;
  }
  .title a:hover {
    color: var(--accent);
  }
  .excerpt {
    flex-grow: 1;
  }
  .date {
    font-size: 0.875rem;
    color: var(--accent);
    margin-top: 1rem;
  }
</style>
