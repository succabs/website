<style>
  footer {
    padding: 64px;
    background: var(--color-bg);
    color: var(--color-text);
    text-align: center;
    border-top: 6px solid var(--corner-color);
    margin: 0 auto;
    margin-top: 64px;
    font-size: 0.9rem;
    max-width: var(--max-width);
  }

  .social-links {
    display: flex;
    justify-content: center;
    gap: 1.5em;
    margin-top: 1.25em;
  }

  .social-links a {
    color: var(--color-text);
    transition: transform 0.2s ease;
  }

  .social-links a:hover {
    transform: scale(1.1);
  }
  .social-links a:hover svg {
    color: var(--accent);
    fill: var(--accent);
  }

  .social-links svg {
    display: block;
  }
</style>
